<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="506.0" prefWidth="1094.0" stylesheets="@../styling/calendarStyle.css" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.planify.demo.controllers.DashboardController">

    <!-- Left section for sidebar menu -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="39.0" spacing="10" styleClass="sidebar">
            <!-- Sidebar Label -->
            <Label styleClass="sidebar-label" text="Planify" />

            <!-- Sidebar Buttons -->
            <Button minHeight="26.0" onAction="#handleInicio" prefHeight="30.0" prefWidth="150.0" styleClass="sidebar-button" text="Inicio" />
            <Button onAction="#handleCalendario" prefHeight="30.0" styleClass="sidebar-button" text="Calendario" />
            <Button onAction="#handleTareas" prefHeight="30.0" styleClass="sidebar-button" text="Tareas" />
            <Button onAction="#handleConfiguracion" prefHeight="30.0" styleClass="sidebar-button" text="Configuración" />
            <Button onAction="#handleCerrarSesion" prefHeight="30.0" styleClass="sidebar-button" text="Cerrar Sesión" />
        </VBox>
    </left>

    <!-- Center area for Calendar -->
    <center>
        <AnchorPane fx:id="calendarPane" prefHeight="400.0" prefWidth="800.0" />
    </center>
</BorderPane>
